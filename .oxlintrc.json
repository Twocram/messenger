{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "perf": "warn"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "warn",
    "import/no-unassigned-import": "off"
  },
  "plugins": ["typescript", "unicorn", "oxc", "import", "vue"],
  "ignorePatterns": ["node_modules", "dist", "*.config.ts", "*.config.js"]
}
