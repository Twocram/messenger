{
  "name": "messsenger",
  "type": "module",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:backend": "bun run --filter @messsenger/backend dev",
    "dev:frontend": "bun run --filter @messsenger/frontend dev",
    "dev:shared": "bun run --filter @messsenger/shared dev",
    "build": "bun run --filter '*' build",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^1.43.0",
    "typescript": "^5.7.0"
  }
}
